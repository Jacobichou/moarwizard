<% provide(:title, 'Calendar') %>
<br>
<!-- Header and Nav -->

<div class="row">
   <div class="large-12 columns">
      <div class="panel">
         <h1>Health &amp; Wellness Overview</h1>
      </div>
   </div>
</div>

<!-- End Header and Nav -->


<div class="row">

   <!-- Main Feed -->
   <!-- This has been source ordered to come first in the markup (and on small devices) but to be to the right of the nav on larger screens -->
   <div class="large-9 columns">
      <div class="large-12 columns">

         <%= render partial: 'shared/nav_controls' %>

      </div>

<!-- schedule appointment -->
<div class="row">
   <div class="large-12 columns">
      <a href="#" class="button" data-reveal-id="schedule-appointment">Schedule an Appointment</a>

      <div id="schedule-appointment" class="reveal-modal" data-reveal>
         <h2>Appointment</h2>
         <p><%= render partial: 'appointments/appointment_form' %></p>
         <a class="close-reveal-modal">&#215;</a>
      </div>
   </div>
</div>

