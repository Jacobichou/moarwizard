<%= form_for :chart, url: chart_path(@chart), method: :patch do |f| %>
          <h2 class="subheader"><%= @chart.user.full_name %>'s&nbsp;Chart</h2>
          <br>

          <dl class="tabs" data-tab>
            <dd class="active"><a href="#vitals">Vitals</a></dd>
            <dd><a href="#observed-info">Observed Info by Doctor/PA</a></dd>
            <dd><a href="#misc">Misc</a></dd>
          </dl>
          <div class="tabs-content">
            <div class="content active" id="vitals">

            <h4>Vitals</h4>
            <div class="row">
              <%= f.label :height, "Height" %>
              <%= f.text_field :height %>
            </div>

            <div class="row">
              <%= f.label :weight, "Weight" %>
              <%= f.text_field :weight %>
            </div>

            <div class="row">
              <%= f.label :bp, "Blood Pressure" %>
              <%= f.text_field :bp %>
            </div>

            <div class="row">
              <%= f.label :heart_rate, "Heart Rate" %>
              <%= f.text_field :heart_rate %>
            </div>

            <div class="row">
              <%= f.label :resp_rate, "Resipiratory Rate" %>
              <%= f.text_field :resp_rate %>
            </div>

            <hr>
            
            <h4>Collected From Patient</h4>
            <div class="row">
              <%= f.label :visit_purpose, "Purpose" %>
              <%= f.text_field :visit_purpose %>
            </div>

            <div class="row">
              <%= f.label :given_symptoms, "Symptoms" %>
              <%= f.text_field :given_symptoms %>
            </div>

            <div class="row">
              <%= f.label :preconditions, "Preconditions" %>
              <%= f.text_field :preconditions %>
            </div>



            </div>
            <div class="content" id="observed-info">

            <h4>Observed by Doctor/PA</h4>
            <div class="row">
              <%= f.label :observed_symptoms, "Symptoms" %>
              <%= f.text_field :observed_symptoms %>
            </div>

            <div class="row">
              <%= f.label :comments, "Comments" %>
              <%= f.text_field :comments %>
            </div>

            <div class="row">
              <%= f.label :diagnosis, "Diagnosis" %>
              <%= f.text_field :diagnosis %>
            </div>

            <div class="row">
              <%= f.label :prognosis, "Prognosis" %>
              <%= f.text_field :prognosis %>
            </div>

            <hr>

            <h4>Instructions Given</h4>
            <div class="row">
              <%= f.label :verbal_instructions, "Verbal Instructions" %>
              <%= f.text_field :verbal_instructions %>
            </div>


            </div>
            <div class="content" id="misc">

            <h4>Misc</h4>
            <div class="row">
              <%= f.label :notes, "notes" %>
              <%= f.text_field :notes %>
            </div>

            <div class="row">
              <%= f.label :lab_request, "Lab Requests" %>
              <%= f.text_field :lab_request %>
            </div>


            </div>
          </div>

            <div class= "row"><%= f.submit "Update", class: "button" %></div>
          <% end %>