<br>
<!-- Header and Nav -->

<div class="row">
   <div class="large-12 columns">
      <div class="panel">
         <h1>Health &amp; Wellness Overview</h1>
      </div>
   </div>
</div>

<!-- End Header and Nav -->


<div class="row">

   <!-- Main Feed -->
   <!-- This has been source ordered to come first in the markup (and on small devices) but to be to the right of the nav on larger screens -->
   <div class="large-9 columns">
      <div class="large-12 columns">

         <ul class="small-block-grid-3 medium-block-grid-4 large-block-grid-5">
            <li class="dash-icons"><a href="<%= dashboard_path %>"><i class="step fi-graph-bar size-72"></i>Dashboard</a></li>
            <li class="dash-icons"><a href="<%= edit_user_registration_path %>"><i class="step fi-results-demographics size-72"></i>Profile</a></li>
            <li class="dash-icons active-icon"><a href="<%= messages_path %>"><i class="step fi-mail size-72"></i>Message</a></li>
            <li class="dash-icons"><a href="/dashboard"><i class="step fi-calendar size-72"></i>Calendar</a></li>
            <li class="dash-icons"><a href="<%= charts_path %>"><i class="step fi-clipboard-notes size-72"></i>&nbsp;&nbsp;Reports</a></li>
         </ul>

      </div>

      <div class="row">
         <div class="large-12 columns">
            <dl class="tabs" data-tab>
               <dd class="active"><a href="#view-msgs">View Messages</a></dd>
               <dd><a href="#send-msgs">Send Message</a></dd>               
               <dd><a href="#sent-msgs">Sent Messages</a></dd>               
            </dl>
            <div class="tabs-content">
               <div class="content active" id="view-msgs">
                  <div class="row">
                     <div class="large-12 columns">
                        <dl class="accordion" data-accordion>
                           <% if @messages.any? %>
                              <%= render partial: 'message_list', collection: @messages %>
                           <% end %>
                        </dl>
                     </div>
                  </div>
               </div>
               <div class="content" id="send-msgs">
                  <%= render 'messages/message_form' %>
               </div>
               <div class="content" id="sent-msgs">
                  <dl class="accordion" data-accordion>
                     <% if @sent_messages.any? %>
                        <%= render partial: 'sent_message_list', collection: @sent_messages %>
                     <% end %>
                  </dl>
               </div>
            </div>
         </div>
      </div>

   </div>

   <!-- Right Sidebar -->
   <!-- On small devices this column is hidden -->
   <aside class="large-3 columns hide-for-small">
      <ul class="small-block-grid-2 medium-block-grid-2 large-block-grid-2">
         <li><img src="http://placehold.it/200x200&text=[xray]" /></li>
         <li><img src="http://placehold.it/200x200&text=[MRI]" /></li>
         <li><img src="http://placehold.it/200x200&text=[xray]" /></li>
         <li><img src="http://placehold.it/200x200&text=[xray]" /></li>
      </ul>
   </aside>

</div>