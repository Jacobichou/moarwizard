      </div>
   </div>
</div>

<!-- End Header and Nav -->


<div class="row">

   <!-- Nav Sidebar -->
   <div class="large-3 columns ">
      <div class="panel">
         <a href="#"><img src="http://placehold.it/300x240&text=[MAHfACE]" /></a>
         <h5><a href="#"><%= current_user.email %></a></h5>
         <div class="section-container vertical-nav" data-section data-options="deep_linking: false; one_up: true">
            <section class="section">
               <h5 class="title">
                  <%= link_to "Personal Information", edit_user_registration_path %>
