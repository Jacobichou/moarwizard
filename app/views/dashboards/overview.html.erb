               <div class="small-3 large-3 columns"><p>Reports</p></div>
               <div class="small-3 large-3 columns">Profile</i></div>
            </div>
         </div>

      </div>

      <% if current_user.messages.any? %>
         <h3>Messages (<%= @messages.count %>)</h3>
           <%= render partial: 'message', collection: @messages %>
       <% end %>

   </div>

   <!-- Right Sidebar -->
   <!-- On small devices this column is hidden -->
   <aside class="large-3 columns hide-for-small">
      <ul class="small-block-grid-2 medium-block-grid-2 large-block-grid-2">
         <li><img src="http://placehold.it/200x200&text=[xray]" /></li>
